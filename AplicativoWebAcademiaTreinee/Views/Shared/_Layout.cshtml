<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AplicativoWebAcademiaTreinee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicativoWebAcademiaTreinee.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <!--Blog template: https://getbootstrap.com/docs/5.1/examples/blog/-->
    <section class="bg-white border-bottom border-3 mb-4">
        <div class="container">
            <header class="blog-header pt-3">
                <div class="row d-flex justify-content-between align-items-center">
                    <div class="m-auto">
                        <a class="blog-header-logo d-flex justify-content-center" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" /></a>
                    </div>
                </div>
            </header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light d-flex">
                <div class="container-fluid">
                    <button class="navbar-toggler row" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <ul class="navbar-nav">
                            <li class="nav-item pe-5">
                                <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item pe-5">
                                <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                            <!--Dropdown-->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle align-content-center" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Cadastro
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Empresa" asp-action="Index">Empresa</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="PessoaModels" asp-action="Index">Pessoa</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - AplicativoWebAcademiaTreinee - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jQuery-Mask-Plugin/jquery.mask.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
